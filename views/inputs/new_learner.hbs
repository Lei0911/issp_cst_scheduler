<!DOCTYPE html>
<header>
    <title> Learners </title>
    <link href = '/css/home.css' rel="stylesheet" type="text/css"/>
</header>

<body>
    {{> sidebar }}
  <div id='addDataBox'>
    <div id='loginFormDiv'>
        <form action="/addNewLearner" method="post">
        <div id="login__wrapper">
            <h2>Add or Edit Learners</h2>
        <div id="learnerSessions">
            <div class="form__group">
                <select style="width:100%; height:34px" name="Learners">
                    {{#each learner_list}}
                        <option value={{this.learnerID}}>{{this.learnerLastName}}, {{this.learnerFirstName}}</option>
                     {{/each}}
                  </select>   
         <input id="edit-learner-submit" name= "edit-learner-submit" formaction="/edit_learner" class="submit_button shadow" type="submit" value="Edit Learner">
        <input id="login-submit" class="submit_button shadow" type="submit" value="Delete Learner" formaction="/deleteLearner">
                    
              <label for="Session" class="form__label">Select Learner</label>
            </div>
              
            </form>
        </div>

            <div class="form__group">
                <input id="LName" class="form__field" type="text" name="learnerLastName" placeholder="Last Name">
                <label for="LName" class="form__label">Last Name</label>
            </div>

            <div class="form__group">
                <input id="FName" class="form__field" type="text" name="learnerFirstName" placeholder="First Name">
                <label for="FName" class="form__label">First Name</label>
            </div>

            <div class="form__group">
                <input id="Pemail" class="form__field" type="email" name="learnPrimaryEmail" placeholder="Primary E-mail">
                <label for="Pemail" class="form__label">Primary E-mail</label>
            </div>

            <div class="form__group">
                <input id="Semail" class="form__field" type="email" name="otherEmail" placeholder="Primary E-mail">
                <label for="Semail" class="form__label">Other E-mail (*optional)</label>
            </div>

            <div class="form__group">
                <input id="specialty" class="form__field" type="text" name="specialty" placeholder="specialty">
                <label for="specialty" class="form__label">Specialty</label>
            </div>

            <div class="form__group">
                <input id="Role" class="form__field" type="text" name="role" placeholder="Role">
                <label for="Role" class="form__label">Role</label>
            </div>


            <div class="form__group">
                <textarea id="comments" class="form__field" rows="5" name="comments" placeholder="Additional Comments"></textarea>
                <label for="comments" class="form__label">Additional Comments </label>
            </div>
            <br>
        
        <input id="login-submit" class="submit_button shadow" type="submit" value="Submit">
      </form>
    <a href="/registrationForm"> 
      <button class='submit_button shadow'>Cancel</button>
    </a>
    </div>
  </div>
</body>