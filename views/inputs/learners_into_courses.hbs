<!DOCTYPE html>
<header>
    <title> Assign Learners to Session </title>
    <link href = '/css/home.css' rel="stylesheet" type="text/css"/>
</header>

<body>
  <div id='addDataBox'>
    <div id='loginFormDiv'>
      <form action="/assignLearner" method="post">

        <div id="login__wrapper">
            <h2>Assign Learners to Session</h2>

                    <br>
        <div id="learnerSessions">
        <div class="form__group">
        <select style="width:100%; height:34px" name="Learners">
            {{#each learner_list}}
                <option value={{this.learnerID}}>{{this.learnerLastName}}, {{this.learnerFirstName}}</option>
            {{/each}}

        </select>   
          <label for="Session" class="form__label">Select Learner</label>
        </div>
        </div>
        <div id="Sessions">
          <div class="form__group">  
        <select style="width:100%; height:34px" name="Sessions">
                {{#each session_list}}
                    <option value={{this.courseRecordID}}>{{this.courseName}}</option>
                {{/each}}

        </select>   
        <label for="instructor" class="form__label">Select Session Name</label>
        </div>


        <a href="#" onclick="addSession();return false;" class="form__label" style="font-size: small;">add another Session</a>
        <div><br style = "line-height:2;"></div> 

        <input id="login-submit" class="submit_button shadow" type="submit" value="Submit">
      </form>
    <a href="/ba_admin"> 
      <button class='submit_button shadow'>Cancel</button>
    </a>
    </div>
  </div>
</body>

<script>
  function addSession(){
    {{!-- <div class="form__group">
          <input id="learnerSession" class="form__field" type="text" name="learnerSession" placeholder="learnerSession">
          <label for="learnerSession" class="form__label">Teach Course: </label>
        </div> --}}

    var formGroup = document.createElement("select");    
    var einput = document.createElement("option");    
       

    einput.className="select__field";
    einput.style="width:100%; height:34px;";
    formGroup.appendChild(einput);                                                              
    document.getElementById("Sessions").appendChild(formGroup); 

  };
</script>