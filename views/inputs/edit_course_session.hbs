<!DOCTYPE html>
<header>
  <title> CST Classroom Session</title>
  <link href="/css/home.css" rel="stylesheet" type="text/css" />
</header>

<body>
  {{> sidebar }}
  <div id='addDataBox'>
    <div id='loginFormDiv'>
      <div id="login__wrapper">
        <h2>Edit Classroom Session</h2>
        <form method="post" action="/submitEditClassroomSession">

            <div class="form__group">
              <input value="{{session_list.courseID}}" id="courseID" class="form__field" type="text"
                name="courseID" placeholder="ID" readonly>
              <label for="courseID" class="form__label">Course ID</label>
            </div>
            <div class="form__group">
              <select name="courseTypeID" style="width:100%; height:34px">

                {{#each coursetypeslist}}
                <option value={{this.courseTypeID}} {{DefaultValueDropdown ../session_list.courseTypeID this.courseTypeID}}>{{this.Type}}</option>
                {{/each}}

              </select>

              <label for="courseTypeID" class="form__label">Select Course Type</label>
            </div>

            <div class="form__group">
              <input id="startTime" class="form__field" type="datetime-local" name="startTime"
                placeholder="Enter Start Time" value="{{formatDatetime session_list.startTime}}">
              <label for="startTime" class="form__label">Start Time: </label>
            </div>

            <div class="form__group">
              <input id="endTime" class="form__field" type="datetime-local" name="endTime"
               placeholder="Enter End Time" value="{{formatDatetime session_list.endTime}}">
              <label for="endTime" class="form__label">End Time: </label>
            </div>

            <div class="form__group">
              <select name="classroomID" style="width:100%; height:34px">
                {{#each sitesList}}
                <!--Create Helper that takes two variables and returns selected if it equals-->
                <option value={{this.classroomID}} {{DefaultValueDropdown ../session_list.classroomID this.classroomID}}>{{this.site}}--{{this.classroomName}}</option>
                {{/each}}

              </select>
              <label for="classroom" class="form__label">Select Classroom</label>
            </div>
            <input id="login-submit" class="submit_button shadow" type="submit" value="Submit">
            </form>
            <a href="/ba_admin">
              <button type="button" class='submit_button shadow'>Cancel</button>
            </a>
        </div>
    </div>

    <script src="/javascript/input_forms.js"></script>
</body>